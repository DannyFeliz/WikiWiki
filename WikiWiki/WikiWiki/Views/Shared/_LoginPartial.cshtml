<div class="text-right" style="margin-top:3%">
    <div style="display:inline-block;">
        <form method="get" action="publicaciones">
            <input type="search" placeholder="Buscar" class="" name="busqueda" />
            <input type="submit" class="btn btn-default" value="Buscar" />
        </form>
    </div> 

    <span> | </span>

    <div style="display:inline-block;">
        @if (Request.IsAuthenticated)
        {
           
            <div>
                <text>
                    ¡Hola, @User.Identity.Name @*@Html.ActionLink(User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Administrar" })*@!
                </text>
            </div>
            @Html.ActionLink("Publicar", "Create", "Home", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-default" })
            <div style="display:inline-block">
                <text>
                    @using (Html.BeginForm("salir", "Logeo", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default">Cerrar sesión</a>
                    }
                </text>
            </div>
            
        }
        else
        {
            <div class="btn-inicioSesion">
                @Html.ActionLink("Registrarse", "Registrar", "Logeo", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-default" })
                @Html.ActionLink("Iniciar sesión", "Iniciar", "Logeo", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-default" })
            </div>
        }
    </div>
</div>