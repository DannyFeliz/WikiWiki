@*@model IEnumerable<Blog.Models.Categoria>*@


<!DOCTYPE html>
<html lang="es">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - WikiWiki</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/bootstrap-dialog.min.css" rel="stylesheet"  />
        <link href="~/Content/normalize.css" rel="stylesheet" />
        <link href="~/Content/style.css" rel="stylesheet" />
        

        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        
        <script>
            function imageOnError(img) {
                console.log(img);
                img.onerror = '';
                var stub = $('<div />')
                    .addClass('stub').html('<img src="/Images/Usuarios/masculinoSysM.png"/>');
                $(img).parent().html(stub);
                return true;
            }
        </script>
    </head>
<body>
    <header>
        @{ Html.RenderPartial("~/Views/Shared/_LoginPartial.cshtml"); }
       
        @*<div id="btn-inicioSesion">
            <a href="@Url.Action("Create","Home")" class="btn btn-primary">Publicar</a>
            <a href="#" class="btn btn-primary">Registrar</a>
            <a href="#" class="btn btn-primary">Iniciar Sesión</a>
        </div>*@

        @*Buscador*@
        @*<form method="get" action="publicaciones">
            <input type="search" placeholder="Buscar" class="" name="busqueda" />
            <input type="submit" class="btn btn-default" value="Buscar" />
        </form>*@
       
        <nav>
            <ul>
                <li id="inicio"><a href="@Url.Action("inicio","Home")">Inicio</a></li>
                <li id="publicaciones"><a href="@Url.Action("publicaciones","Home")">Publicaciones</a></li>
                <li id="acercanosotros"><a href="@Url.Action("Acerca", "Home")">Acerca de nosotros</a></li>
                <li id="contacto"><a href="@Url.Action("Contact", "Home")">Contactos</a></li>
                @{
                    Blog.Controllers.Repositorios.RepositorioUsuario repositorioUsuario = new Blog.Controllers.Repositorios.RepositorioUsuario();
                    if (repositorioUsuario.getRolUsuario(User.Identity.Name) == "Administrador") { 
                        <li id="contacto"><a href="@Url.Action("Index","Administracion")">Administrar</a></li>
                    }
                }

            </ul>
        </nav>

    </header>
   
 
       

    <div id="body">
        <section class="contenidoPagina">

            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </section>

        <section id="derecha">

            <aside>
                <div id="redesSociales">
                    <h3 class="titulos">Redes sociales</h3>
                    <div>
                        <a href="https://www.facebook.com/InfoWikiWiki"><img src="~/Images/icons/facebook.png" /></a>
                        <a href="https://twitter.com/InfoWikiWiki"><img src="~/Images/icons/twitter.png" /></a>
                        <a href="https://plus.google.com/u/2/117288809903314805209/posts?hl=es_419"><img src="~/Images/icons/google.png" /></a>
                    </div>
                </div>
                <div id="categoria">
                    <h3 class="titulos">Categorías</h3>
                    <ul>
                        @* Por alguna razón dejó de funcionar esto *@
                        @*@foreach (var @item in Model)
                        {
                            <li><a href="@Url.Action("publicaciones")?categoria=@item.categoria">@item.categoria</a></li>
                        }*@
                        @{
                            WikiWiki.Models.UsersContext db = new WikiWiki.Models.UsersContext();
                            var array = db.categoria.ToArray(); 
                            foreach (var @item in array)
                            {
                                <li><a href="@Url.Action("PublicacionesPorCategoria", new { categoria_id = @item.id })">@item.categoria</a></li>
                            }
                        }

                    </ul>
                </div>
            </aside>
        </section>
    </div>
    @RenderSection("scripts", required: false)
    <footer>
        <div id="mapa">
            <span>Mapa del sítio</span>
            <ul>
                <li><a href="@Url.Action("inicio","Home")">Inicio</a></li>
                <li><a href="#">Más Recientes</a></li>
                <li><a href="#">Más Visitados</a></li>
                <li><a href="@Url.Action("Registrar","Logeo")">Regístrate</a></li>

            </ul>
        </div>

        <div id="mapa2">
            <span>Otra Información</span>
            <ul>
                <li><a href="@Url.Action("Acerca","Home")">Acerca de nosotros</a></li>
                <li><a href="@Url.Action("Iniciar","Logeo")">Iniciar Sesión</a></li>
                <li><a href="../Home/Create">Publicar</a></li>
                <li><a href="@Url.Action("Contact","Home")">Contácto</a></li>

            </ul>
        </div>

    </footer>
</body>
</html>

 @Scripts.Render("/Scripts/bootstrap-3.2.0-dist/js/bootstrap.js")