@model Blog.Models.Logeo

@{
    ViewBag.Title = "Index";
}

<section id="loginForm">
    <h2>Use a local account to log in.</h2>
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Log in Form</legend>
            <ol>
                <li>
                    @Html.LabelFor(m => m.usuario)
                    @Html.TextBoxFor(m => m.usuario)
                    @Html.ValidationMessageFor(m => m.usuario)
                </li>
                <li>
                    @Html.LabelFor(m => m.clave)
                    @Html.PasswordFor(m => m.clave)
                    @Html.ValidationMessageFor(m => m.clave)
                </li>
                <li>
                    @Html.CheckBoxFor(m => m.recordarme)
                    @Html.LabelFor(m => m.recordarme, new { @class = "checkbox" })
                </li>
            </ol>
            <input type="submit" value="Log in" />
        </fieldset>
        <p>
            @Html.ActionLink("Register", "Register") if you don't have an account.
        </p>
    }
</section>
