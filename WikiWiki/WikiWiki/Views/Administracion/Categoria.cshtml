@model Blog.Models.Categoria

@{
    ViewBag.Title = "Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div style="width: 40%; border-radius:5%; margin:auto; border: solid 1px black ">
        <div style="width: 90%; margin: auto">
            @Html.ValidationSummary(true)
            <h2 class="centrar">Categoria</h2>

            <div class="form-group centrar">
                @Html.TextBoxFor(model => model.categoria, htmlAttributes: new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.categoria)
            </div>

            <div class="form-group centrar">
                <div>
                    <input type="submit" value="Crear" class="btn btn-default" />
                    @Html.ActionLink("Cancelar", "ListaCategoria", "Administracion",routeValues: null,  htmlAttributes: new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}
